@model List<GymManager.Core.EquipmentType>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeaderRight
    {
    <form class="d-flex" role="search">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-danger" type="submit">Search</button>
    </form>
}

<div class="container">
    <h1 class="mt-5">Equipment Types</h1>
    <div class="row">
        <div class="col-12">
            <a asp-action="Create" class="btn btn-outline-success float-end">Add Equipment Type</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Equipment Name</th>
                

                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var equipment in Model)
            {
                <tr>
                    <th scope="row">@equipment.EquipmentName</th>
                    
                    <td>
                        <a asp-action="Edit" asp-route-equipmentId="@equipment.Id" class="btn btn-outline-info">Edit</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-equipmentId="@equipment.Id" class="btn btn-outline-danger">Delete</a>
                    </td>


                </tr>
            }
        </tbody>
    </table>
</div>
